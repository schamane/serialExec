{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "sourceMap": false,
    "strict": false,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "outDir": "lib",
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "src/*": ["src/*"],
      "tests/*": ["__tests__/*"]
    },
  },
  "exclude": [
    "node_modules",
    "lib"
  ]
}
